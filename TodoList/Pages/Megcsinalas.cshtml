@page
@using TodoList.Modellek;
@model TodoList.Pages.MegcsinalasModel

Ez itt a megcsinálás oldal.

<form method="post">
    <div>
        <label for="Cím">Írd be annak a teendőnek az azonosítóját, amit meg akarsz csinálni!</label>
        <input type="Azonosito" id="Azonosito" name="Azonosito" asp-for="Azonosito" />
    </div>
    <br />
    <button type="submit">Teendő megcsinálása</button>
</form>

@{
    //Ez a teendőket rendezi időpont szerint
    List<Teendo> RendezettTeendok = Tarhely.Teendok.OrderBy(x => x.Idopont).ToList();

    foreach (var item in RendezettTeendok)
    {

        if (item.Megcsinaltae == false)
        {
            string szoveg = item.Leiras + " - " + item.Idopont + " - " + item.Id;

            <h4> @szoveg  </h4>
        }

    }
}
